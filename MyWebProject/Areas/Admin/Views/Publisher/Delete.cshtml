@model Publisher

<form method="post">
    <input asp-for="PublisherId" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Publisher</h2>
            <hr />
        </div>
        @*<div asp-validation-summary="All"></div> This displays all the error messages above*@
        <div class="mb-3 row p-1">
            <label asp-for="PublisherName" class="p-0"></label>
            <input asp-for="PublisherName" disabled class="form-control" />
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="YearOfPublication" class="p-0"></label>
            <input asp-for="YearOfPublication" disabled class="form-control" />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Publisher" asp-action="Index" class="btn btn-secondary form-control">
                    Back to list
                </a>
            </div>
        </div>
    </div>
</form>
