@model List<Publisher>
<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Publisher List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row mb-3">
            <div class="col text-end">
                <a asp-controller="Publisher" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Create New Publisher
                </a>
            </div>
        </div>
        <table id="tblData" class="table table-bordered table-striped w-100">
            <thead>
                <tr>
                    <th>Publisher Name</th>
                    <th>Year of Publication</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.OrderBy(u => u.YearOfPublication))
                {
                    <tr>
                        <td>@obj.PublisherName</td>
                        <td>@obj.YearOfPublication</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Publisher" asp-action="Edit" asp-route-id="@obj.PublisherId" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Publisher" asp-action="Delete" asp-route-id="@obj.PublisherId" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash3"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
