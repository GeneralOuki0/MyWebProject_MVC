@model Publisher 

<form method="post">
    <div class ="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Publisher</h2>
            <hr/>
        </div>       
        @*<div asp-validation-summary="All"></div> This displays all the error messages above*@
        <div class="mb-3 row p-1">       
            <label asp-for="PublisherName" class="p-0"></label>
            <input asp-for="PublisherName" class="form-control"/>
            <span asp-validation-for="PublisherName" class="text-danger"></span> @*This gives us client side validation*@
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="YearOfPublication" class="p-0"></label>
            <input asp-for="YearOfPublication" class="form-control" />
            <span asp-validation-for="YearOfPublication" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Publisher" asp-action="Index" class="btn btn-secondary form-control">
                    Back to list
                </a>
            </div>
        </div>
    </div>
</form>

            @section Scripts{
                @{
                    <partial name="_ValidationScriptsPartial"/> //This will add the scripts (javascript) from the shared foler to add the client side validation 
                }
            }