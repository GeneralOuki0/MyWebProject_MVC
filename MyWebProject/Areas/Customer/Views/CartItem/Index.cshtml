@model List<CartItem>
<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Shopping Cart
            </h2>
        </div>
    </div>
    <Table class="table table-bordered table-striped ">
        <thead>
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Price
                </th>
                <th>
                    Quantity
                </th>
                <th>
                    
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Product.Title</td>
                    <td>@obj.Product.Price * @obj.Quantity</td>
                    <td>@obj.Quantity</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="CartItem" asp-action="Edit" asp-route-id="@obj.CartItemId" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="CartItem" asp-action="Delete" asp-route-id="@obj.CartItemId" class="btn btn-danger mx-2">
                                <i class="bi bi-trash3"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </Table>
</div>