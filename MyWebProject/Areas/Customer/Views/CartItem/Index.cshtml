@model List<CartItem>


<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Shopping Cart
            </h2>
        </div>
    </div>
    <Table class="table table-bordered table-striped ">
        <thead>
            <tr>
                <th>
                    Title
                </th>
                <th>
                    Price
                </th>
                <th>
                    Quantity
                </th>
                <th>
                    
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Product.Title</td>
                    <td>$@(obj.Product != null ? (obj.Product.Price * obj.Quantity) : 0)</td>
                    <td>@obj.Quantity </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <form asp-action="Delete" asp-controller="CartItem" method="post" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                <input type="hidden" name="id" value="@obj.CartItemId" />
                                <button type="submit" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash3"></i> Delete
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </Table>
</div>